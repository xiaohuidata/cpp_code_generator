{
	"name": "BasicCppProject",
	"version": "1.0.0",
	"description": "基础C++项目配置示例",
	"output_dir": "./generated_basic",
	"common_includes": [
		"<iostream>",
		"<string>",
		"<vector>",
		"<memory>"
	],
	"variables": {
		"AUTHOR": "Code Generator",
		"YEAR": "2024",
		"COMPANY": "Example Corp",
		"PROJECT_NAMESPACE": "basic_project",
		"HEADER_EXTENSION": ".hpp",
		"SOURCE_EXTENSION": ".cpp"
	},
	"code_templates": {
		"file_header": "// ${PROJECT_NAME} - v${PROJECT_VERSION}\n// Generated by C++ Code Generator\n// Author: ${AUTHOR}\n// Company: ${COMPANY}\n// Date: ${TIMESTAMP}\n// File: ${FILENAME}",
		"class_comment": "${CLASS_NAME} - 自动生成的类",
		"function_comment": "${FUNCTION_NAME} - 自动生成的函数"
	},
	"files": [
		{
			"filename": "utils${HEADER_EXTENSION}",
			"type": "header",
			"includes": [
				"<string>",
				"<vector>"
			],
			"namespaces": ["${PROJECT_NAMESPACE}", "utils"],
			"functions": [
				{
					"name": "ToString",
					"return_type": "std::string",
					"parameters": [
						{
							"type": "int",
							"name": "value"
						}
					],
					"body": "return std::to_string(value);",
					"access": "public",
					"comment": "将整数转换为字符串"
				},
				{
					"name": "SplitString",
					"return_type": "std::vector<std::string>",
					"parameters": [
						{
							"type": "const std::string&",
							"name": "str"
						},
						{
							"type": "char",
							"name": "delimiter"
						}
					],
					"body": "std::vector<std::string> tokens;\nstd::stringstream ss(str);\nstd::string token;\nwhile (std::getline(ss, token, delimiter)) {\n    if (!token.empty()) {\n        tokens.push_back(token);\n    }\n}\nreturn tokens;",
					"access": "public",
					"comment": "分割字符串"
				}
			],
			"classes": [
				{
					"name": "StringUtil",
					"access": "public",
					"functions": [
						{
							"name": "Trim",
							"return_type": "std::string",
							"parameters": [
								{
									"type": "const std::string&",
									"name": "str"
								}
							],
							"static": true,
							"body": "auto start = str.find_first_not_of(\" \\t\\n\\r\\f\\v\");\nauto end = str.find_last_not_of(\" \\t\\n\\r\\f\\v\");\nreturn (start == std::string::npos) ? \"\" : str.substr(start, end - start + 1);",
							"access": "public",
							"comment": "去除字符串两端空白字符"
						}
					]
				}
			]
		},
		{
			"filename": "utils${SOURCE_EXTENSION}",
			"type": "source",
			"includes": [
				"\"utils${HEADER_EXTENSION}\"",
				"<algorithm>",
				"<cctype>"
			],
			"namespaces": ["${PROJECT_NAMESPACE}", "utils"],
			"functions": [
				{
					"name": "ToUpper",
					"return_type": "std::string",
					"parameters": [
						{
							"type": "const std::string&",
							"name": "str"
						}
					],
					"body": "std::string result = str;\nstd::transform(result.begin(), result.end(), result.begin(), ::toupper);\nreturn result;",
					"access": "public",
					"comment": "将字符串转换为大写"
				}
			]
		},
		{
			"filename": "main${SOURCE_EXTENSION}",
			"type": "source",
			"includes": [
				"\"utils${HEADER_EXTENSION}\""
			],
			"functions": [
				{
					"name": "main",
					"return_type": "int",
					"parameters": [
						{
							"type": "int",
							"name": "argc"
						},
						{
							"type": "char**",
							"name": "argv"
						}
					],
					"body": "using namespace ${PROJECT_NAMESPACE}::utils;\n\nstd::cout << \"Basic C++ Project Example\" << std::endl;\nstd::cout << \"Number to string: \" << ToString(42) << std::endl;\nstd::cout << \"Uppercase: \" << ToUpper(\"hello world\") << std::endl;\n\nreturn 0;",
					"access": "public"
				}
			]
		}
	]
}
